{
    "name": "Lachesis",
    "version": "1.0.0",
    "description": "Moirai supervisor",
    "license": "MIT",
    "author": {
        "name": "Álan Crístoffer",
        "email": "acristoffers@gmail.com",
        "url": "https://github.com/acristoffers/moirai"
    },
    "devDependencies": {
        "electron": "1.4.3",
        "coffee-script": "1.11.1"
    },
    "homepage": "https://github.com/acristoffers/moirai",
    "productName": "lachesis",
    "directories": {
        "app": "www"
    },
    "build": {
        "extraResources": ["www/**/*"],
        "appId": "me.acristoffers.lachesis",
        "productName": "Lachesis",
        "protocols": [{
            "name": "Moirai supervisor",
            "role": "Editor",
            "schemes": ["tcp"]
        }],
        "linux": {
            "category": "public.app-category.productivity",
            "packageCategory": "productivity",
            "target": ["AppImage", "deb", "rpm", "freebsd", "pacman", "tar.xz"],
            "synopsis": "Moirai supervisor"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "target": ["dmg", "zip"]
        },
        "win": {
            "target": ["nsis", "zip"]
        },
        "nsis": {}
    },
    "scripts": {
        "pack": "build --dir",
        "dist": "build --mac --win --linux"
    }
}
