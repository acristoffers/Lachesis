<?xml version='1.0' encoding='utf-8'?>
<widget id="me.acristoffers.lachesis" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SocketsForCordova">
        <param name="android-package" value="cz.blocshop.socketsforcordova.SocketPlugin" />
    </feature>
    <name>Lachesis</name>
    <description>
        Moirai supervisor.
    </description>
    <author email="acristoffers@gmail.com" href="https://github.com/acristoffers/lachesis">
        Álan Crístoffer
    </author>
    <content src="index.htm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
